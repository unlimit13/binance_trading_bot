cd ai_trader

# 0) 가상환경(선택)
python -m venv .venv
# Windows: .venv\Scripts\activate
# macOS/Linux:
source .venv/bin/activate

# 1) 패키지 설치
pip install -r requirements.txt

# 2) 환경변수/설정
cp .env.example .env   # 필요한 경우 키/시크릿, TESTNET 여부 수정
# config.yaml 에 심볼/시작일/파라미터 확인

# 3) 초기 백필 (2024년부터)
python fetch_klines.py --mode backfill

# 4) 데이터셋 생성
python build_dataset.py

# 5) 학습
python train.py

# 6) 현재 액션 한 번 보기
python decide.py
# 6) 재학습
python hourly_update.py